generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Designers {
  id               String     @id @default(cuid())
  isPublished      Boolean?   @default(false)
  firstName        String?
  lastName         String?
  slug             String?    @unique
  email            String?
  website          String?
  linkedin         String?
  instagram        String?
  x                String?
  dribbble         String?
  country          String?
  getStarted       String?
  responsibilities String?
  difficulties     String?
  incorporateApps  String?
  advice           String?
  regrets          String?
  stayInspired     String?
  oneLiner         String?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  companiesId      String?
  companies        Companies? @relation(fields: [companiesId], references: [id])
  rolesId          String?
  roles            Roles?     @relation(fields: [rolesId], references: [id])
  appsText         String?
  booksText        String?
  apps             Apps[]     @relation("AppsToDesigners")
  books            Books[]    @relation("BooksToDesigners")

  @@index([slug])
}

model Apps {
  id        String      @id @default(cuid())
  app       String?
  desc      String?
  url       String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  designers Designers[] @relation("AppsToDesigners")
}

model Books {
  id        String      @id @default(cuid())
  book      String?
  author    String?
  url       String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  bookCover String?
  designers Designers[] @relation("BooksToDesigners")
}

model Roles {
  id        String      @id @default(cuid())
  role      String?     @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  designers Designers[]
}

model Companies {
  id          String      @id @default(cuid())
  company     String?     @unique
  desc        String?
  url         String?
  companySize String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  designers   Designers[]
}
